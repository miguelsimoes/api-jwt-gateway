{
    "name": "smsimoes/authentication-microservice",
    "license": "MIT",
    "type": "project",
    "description": "Microservice implementation of the authentication process based on JWT",
    "authors": [
        {
            "name": "Miguel Sim√µes",
            "email": "msimoes@gmail.com"
        }
    ],
    "autoload": {
        "classmap": [ "app/ApplicationCache.php", "app/ApplicationKernel.php" ],
        "psr-4": {
            "Application\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Application\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.0.24"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "vendor-dir": "vendor"
    },
    "extra": {
        "symfony-app-dir"  : "app",
        "symfony-bin-dir"  : "bin",
        "symfony-tests-dir": "tests",
        "symfony-var-dir"  : "var",
        "symfony-web-dir"  : "public"
    },
    "prefer-stable": true,
    "require": {
        "php": "^7.0",

        "lcobucci/jwt": "^3.2",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^5.1",
        "symfony/dotenv": "^3.4",
        "symfony/monolog-bundle": "^3.1",
        "symfony/security-bundle": "^3.4",
        "symfony/templating": "^3.4",
        "symfony/twig-bundle": "^3.4",
        "symfony/yaml": "^3.4"
    },
    "require-dev": {
        "symfony/debug-bundle": "^3.4",
        "symfony/twig-bundle" : "^3.4",
        "symfony/web-profiler-bundle": "^3.4",
        "symfony/web-server-bundle": "^3.4"
    },
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    }
}
